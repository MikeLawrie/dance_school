<h1>teachers#index</h1>

<table class= "table table-striped">
  <thead>
    <tr>
      <th>Преподаватели</th>

    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher|%>
      <tr>  
          <%= render partial: 'teachers/teacher', object: teacher  %>
          <td><%= link_to 'Редактировать', edit_admin_teacher_path(teacher) %> </td>
          <td><%= link_to 'Удалить', [:admin, teacher], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <%end%>
  </tbody>
</table>

<%= link_to 'Новый преподаватель', new_admin_teacher_path %>
<br>
<%= link_to 'Основное меню', root_path %>