<%= form_for [:admin, @group] do |f| %>

  <div class="field">
    <%= f.label :title, "Название" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :style, "Направление" %>
    <%= f.text_field :style %>
  </div>


  <div class="actions">
    <%= f.submit "#{@group.new_record? ? 'Создать' : 'Изменить' }" %>
  </div>
<% end %>