<%= form_for [:admin, @room] do |f| %>
  <%= render 'common/errors', resource: @room %>

  <div class="field">
    <%= f.label :title, "Название" %>
    <%= f.text_field :title %>
  </div>

  <div class="actions">
    <%= f.submit "#{@room.new_record? ? 'Создать' : 'Изменить' }" %>
  </div>
<% end %>