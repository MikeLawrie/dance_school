<h1>Занятия</h1>

<%= link_to 'Актуальные занятия', admin_lessons_path %>
<%= link_to 'Все занятия', index_all_admin_lessons_path %>


<table class= "table table-striped">
  <thead>
    <%= render 'lessons/head' %>  
  </thead>

  <tbody>
    <% @lessons.each do |lesson|%>
      <tr>  
          <%= render partial: 'lessons/lesson', object: lesson  %>
          <td><%= link_to 'Запись', admin_lesson_path(lesson) %> </td>           
          <td><%= link_to 'Редактировать', edit_admin_lesson_path(lesson) %> </td>
          <td><%= link_to 'Удалить', [:admin, lesson], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <%end%>
  </tbody>
</table>
<br>
<% if @pagination %>
<%= paginate @lessons %>
<%end%>
<br>
<%= link_to 'Новый урок', new_admin_lesson_path %>
<br>
<%= link_to 'Основное меню', admin_welcome_index_path %>