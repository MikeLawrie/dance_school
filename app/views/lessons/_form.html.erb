<%= form_for lesson do |f| %>

  <div class="field">
    <%= f.label :style, "Направление" %>
    <%= f.text_field :style %>
  </div>

  <div class="field">
    <%= f.label :teacher, "Преподаватель" %>
    <%= f.text_field :teacher %>
  </div>

  <div class="field">
    <%= f.label :start_time, "Дата и время" %>
    <%= f.datetime_local_field :start_time :default %>
  </div>

  <div class="field">
    <%= f.label :duration, "Длительность" %>
    <%= f.text_field :duration %>
  </div>


  <div class="actions">
    <%= f.submit "#{@lesson.new_record? ? 'Создать' : 'Изменить' }" %>
  </div>
<% end %>